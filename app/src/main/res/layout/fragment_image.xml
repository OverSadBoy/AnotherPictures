<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_info"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/full_image"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:contentDescription="@string/picture_from_unsplash"
        android:scaleType="centerCrop"
        android:transitionName="@string/picture_from_unsplash"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/color_main_accent"
        tools:text="1920 x 1080" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="no description"
        android:textColor="@color/color_light_text"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/download"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:background="@color/color_main_accent"
        android:text="DOWNLOAD"
        android:textColor="@color/color_text"
        app:cornerRadius="24dp" />
</LinearLayout>